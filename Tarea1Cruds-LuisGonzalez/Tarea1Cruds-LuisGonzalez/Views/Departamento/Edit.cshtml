@model Tarea1Cruds_LuisGonzalez.Models.DepartamentoViewModel

@{
    ViewBag.Title = "Edit";
}



@using (Html.BeginForm())
{   
    <h2></h2>
    <div class="form-horizontal">
        <h4>Editar Departamento</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        <div class="form-group">
            @Html.LabelFor(model => model.NombreDepartamento, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NombreDepartamento, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NombreDepartamento, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a type="button" value="Regresar" class="btn btn-default" href="/Departamento/Index">Regresar</a>
                <button type="submit" value="Crear Departamento" class="btn btn-success">Editar</button>

            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
